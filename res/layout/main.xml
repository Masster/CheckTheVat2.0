<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:background="@android:color/black"
              android:focusable="false"
              android:orientation="vertical">
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/edAmount"
                        android:gravity="center|right"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginRight="0dp"
                        android:layout_weight="4"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:text="0"
                        android:selectAllOnFocus="true"
                        android:maxLength="12" android:textSize="32sp" android:background="@drawable/round_shape_1"
                        android:textColorHighlight="#ff920f"/>

                <Button
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="C"
                        android:id="@+id/button3"
                        android:background="@drawable/round_shape_state_2"
                        android:textSize="30sp"
                        android:layout_gravity="center_horizontal|right"
                        android:onClick="ClearInput" android:textColor="#000000" android:layout_marginLeft="1dp"
                        android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:layout_width="60dp"
                        android:layout_height="48dp"
                        android:inputType="numberDecimal"
                        android:width="1dp"
                        android:ems="10"
                        android:id="@+id/edVat"
                        android:background="@drawable/round_shape_state_2"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:maxLength="4"
                        android:hint="%"
                        android:text="0" android:textColor="#000000" android:textSize="24sp"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnCheck"
                        android:background="@drawable/round_shape_state"
                        android:padding="5dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:layout_gravity="center|left"
                        android:onClick="testPress" android:textColor="#000000" android:layout_marginBottom="8dp"
                        android:textSize="28sp" android:text="@string/btnStart"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tvSum"
                        android:id="@+id/textView" android:textColor="#ffffff"
                        android:layout_marginBottom="2dp" android:textSize="20sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/tvSum" android:gravity="right"
                        android:textColor="#ffffff"
                        android:layout_marginBottom="2dp" android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tvSumVat"
                        android:id="@+id/textView5"
                        android:textColor="#ff630c" android:textSize="18sp"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/tvSumN"
                        android:textColor="#ff630c"
                        android:gravity="right"
                        android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:textColor="#ff630c" android:textSize="18sp"
                        android:text="@string/tvVAT"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/tvNDS1"
                        android:textColor="#ff630c" android:gravity="right" android:textSize="18sp"
                        />
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="4dp">

                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tvSumWVAT"
                        android:id="@+id/textView7"
                        android:textColor="#23ff26" android:textSize="18sp"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/tvSumVN"
                        android:textColor="#23ff26" android:gravity="right" android:textSize="18sp"
                        />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tvInVAT"
                        android:id="@+id/textView2" android:textColor="#23ff26" android:textSize="18sp"
                        />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/tvNDS2" android:textColor="#23ff26" android:gravity="right"
                        android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
